#include <iostream>

int main()
{
    using std::cout;
    using std::cin;
    using std::endl;
    
    
    int A[5] = {2,4,6,8,10};
    int *p = A;
    int *q = &A[3];
    //int d;
    
    cout << *p << endl;
    p++;
    cout << *p << endl;
    p--;
    cout << *p << endl;
    p += 2;
    cout << *p << endl;
    p -= 2;
    cout << *p << endl;
    // distance between two pointers
    // difference divided by size of data type
    //d = q - p;
    cout << "Two pointers are seperated by "<< q - p << " elements."<< endl;
    return 0;
}

/* 
2
4
2
6
2
Two pointers are seperated by 3 elements.
*/
