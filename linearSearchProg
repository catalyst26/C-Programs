int search(int A[], int n, int key)
{
    for (int i = 0; i < n; i++)
    {
        if (A[i] == key)
            return i;
    }
    return -1;
}

int main()
{
    using std::cout;
    using std::cin;
    using std::endl;
    
    int B[] = {2,4,6,8,46,32,55};
    
    int a;
    cout << "Enter an element to be searched: ";
    cin >> a;
    
    int elem = search(B, 7, a);
    
    cout << "Element found at index " << elem << endl;
    return 0;
}
