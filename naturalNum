#include <iostream>

int main() {
    
    using std::cout;
    using std::cin;
    using std::endl;
    
    int n, i, sum = 0;
    cout<<"Enter number for sum: ";
    cin>>n;
    for (i = 1; i <= n; i++)
    {
        sum += i;
    }
    
    cout << "The sum of the first " << n << " natural numbers is " << sum << endl;
    
    
    return 0;
}

